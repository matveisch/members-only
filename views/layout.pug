doctype html
html(lang='en')
    head
        title= title
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='/stylesheets/style.css')
    body
        header
            div.title
                a(href='/')
                    h1 Members Only
                if user
                    a(href='/message/create').button Create post
            if user
                div.user
                    a(href=user.url)
                        h2= user.fullName
                    a(href='/logout')
                        img(src='../images/logout.png' alt='logout').logout-img
            else
                nav
                    ul
                        li
                            a(href='/sign-in') Sign In
                        li
                            a(href='/sign-up') Sign Up
        main
            block content
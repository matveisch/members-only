extends index

block message
    div.messages-container
        each message in messages
            div.message
                if (message.id !== id)
                    div.message-title
                        h1= message.title
                        if (user)
                            if user.admin
                                a(href=`${message.url}/delete`)
                                    img(src='/images/delete.png' alt='delete').delete-img
                    if user
                        h3= `${message.author.fullName} â€“ ${message.timeStampFormatted}`
                    p= message.text
                else
                    block delete
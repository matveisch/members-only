<div class="form-container">
    <form action="" method="POST" class="form">
        <label for="firstName">First name:</label>
        <input type="text" id="firstName" name="firstName" value=<%if (user) {%><%= user.firstName %><% } %>>
        <label for="secondName">Second name:</label>
        <input type="text" id="secondName" name="secondName" value=<%if (user) {%><%= user.secondName %><% } %>>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value=<%if (user) {%><%= user.email %><% } %>>
        <label for="password">Password:</label>
        <input type="password" id="password" name="password">
        <label for="confirmPassword">Confirm password:</label>
        <input type="password" id="confirmPassword" name="confirmPassword">
        <button type="submit">Sign Up</button>
    </form>
</div>
<ul>
    <% errors.forEach(error => { %>
        <li><%= error.msg%></li>
    <% }); %>
</ul>
